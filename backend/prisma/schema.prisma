generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum VerificationStatus {
  NONE
  PENDING
  VERIFIED
  REJECTED
}

model Student {
  id                 Int      @id @default(autoincrement())
  nim                String   @unique
  passwordHash       String
  mustChangePassword Boolean  @default(true)
  verificationStatus VerificationStatus @default(NONE)
  verificationCardPath String?
  verificationSelfiePath String?
  verificationSubmittedAt DateTime?
  verificationVerifiedAt DateTime?
  verificationRejectedAt DateTime?
  verificationRejectReason String?
  voteReceipts       VoteReceipt[]
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model VoteReceipt {
  id          Int      @id @default(autoincrement())
  studentId   Int
  student     Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  electionId  BigInt
  candidateId BigInt
  txHash      String
  mode        String
  createdAt   DateTime @default(now())

  @@unique([studentId, electionId])
}

model CandidateProfile {
  id           Int      @id @default(autoincrement())
  electionId   BigInt
  candidateId  BigInt
  tagline      String?
  about        String?
  visi         String?
  misi         String?
  programKerja String?
  photoPath    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([electionId, candidateId])
}

model ElectionSchedule {
  id         Int      @id @default(autoincrement())
  electionId BigInt   @unique
  opensAt    DateTime?
  closesAt   DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model ElectionState {
  id         Int      @id @default(autoincrement())
  electionId BigInt   @unique
  openedOnce Boolean  @default(false)
  openedAt   DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model AdminAuditLog {
  id            Int      @id @default(autoincrement())
  adminUsername String
  adminId       Int?
  action        String
  meta          Json?
  createdAt     DateTime @default(now())
}

model AdminUser {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  passwordHash String
  role         String   @default("admin")
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ElectionResult {
  id          Int      @id @default(autoincrement())
  electionId  BigInt   @unique
  title       String
  totalVotes  Int
  results     Json
  snapshotAt  DateTime @default(now())
  published   Boolean  @default(false)
  publishedAt DateTime?
  startTime   DateTime?
  endTime     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
